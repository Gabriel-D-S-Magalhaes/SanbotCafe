<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_pai"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TableLayout
        android:id="@+id/pedido_tbl"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="45dp"

        android:gravity="center"

        android:scrollbars="vertical">

        <TableRow
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:paddingEnd="45dp"

                android:text="@string/tv_itens_column"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="27sp" />

            <TextView
                android:paddingEnd="45dp"

                android:text="@string/tv_qtd_itens"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="27sp" />

            <TextView
                android:text="@string/tv_preco"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="27sp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/tv_total"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/pedido_tbl"
        android:layout_below="@id/pedido_tbl"
        android:layout_marginTop="45dp"

        android:text="@string/tv_total_final"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="27sp" />

    <Button
        android:id="@+id/btn_novo_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_back_arrow"
        android:onClick="cancelOrder" />

    <TextView
        android:id="@+id/tv_contador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btn_novo_pedido"
        android:layout_alignEnd="@id/btn_novo_pedido"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="27sp" />


</RelativeLayout>
