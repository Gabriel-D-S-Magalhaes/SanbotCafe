<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_pai"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TableLayout
        android:id="@+id/pedido_tbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:scrollbars="vertical">

        <TableRow android:gravity="center">

            <TextView
                android:paddingEnd="45dp"
                android:text="Itens"
                android:textColor="#000000"
                android:textSize="27sp" />

            <TextView
                android:paddingEnd="45dp"
                android:text="Qtd."
                android:textColor="#000000"
                android:textSize="27sp" />

            <TextView
                android:text="PreÃ§o"
                android:textColor="#000000"
                android:textSize="27sp" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btn_novo_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_back_arrow"
        android:onClick="cancelOrder" />

    <TextView
        android:id="@+id/tv_contador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_novo_pedido"
        android:layout_alignEnd="@id/btn_novo_pedido"
        android:text="30"
        android:textColor="#000000"
        android:textSize="27sp" />
</RelativeLayout>
