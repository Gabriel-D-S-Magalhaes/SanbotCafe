<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="horizontal"
    tools:context="vivacity.com.br.sanbotcafe.MainActivity">

    <ImageView
        android:id="@+id/btn_exit"

        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"

        android:clickable="true"

        android:focusable="true"

        android:onClick="exitApp"

        android:src="@drawable/ic_exit_white" />

    <ImageView
        android:id="@+id/logo_iv"

        android:layout_width="192dp"
        android:layout_height="192dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="90dp"

        android:src="@drawable/ic_app_logo" />

    <TextView
        android:id="@+id/app_name_tv"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_start"
        android:layout_alignEnd="@id/logo_iv"
        android:layout_alignStart="@id/logo_iv"
        android:layout_below="@+id/logo_iv"

        android:fontFamily="cursive"

        android:gravity="center"

        android:text="@string/app_name"
        android:textColor="#ffffff"
        android:textSize="58sp" />

    <Button
        android:id="@+id/btn_start"

        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/logo_iv"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/logo_iv"
        android:layout_marginBottom="90dp"

        android:background="#3e1e00"

        android:onClick="onClickedViews"

        android:text="@string/btn_start"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="27sp"
        android:textStyle="normal" />

</RelativeLayout>
