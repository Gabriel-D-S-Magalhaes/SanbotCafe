<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="vivacity.com.br.sanbotcafe.CategoriaBebidasActivity">

    <LinearLayout
        android:id="@+id/escolher_bebidas_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/iv_bebidas_com_alcool"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="45dp"

            android:drawableTop="@drawable/ic_drink_alcohol"

            android:onClick="categoriaEscolhida"

            android:text="@string/bebidas_alcoolicas"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/iv_bebidas_sem_alcool"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"

            android:drawableTop="@drawable/ic_drink_free_alcohol"

            android:onClick="categoriaEscolhida"


            android:text="@string/bebidas_sem_alcool"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="27sp" />

    </LinearLayout>

</RelativeLayout>
